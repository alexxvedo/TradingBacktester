generator client {
  provider      = "prisma-client-js"
  output        = "../../generated/clientSessions"
  binaryTargets = ["native", "rhel-openssl-3.0.x"]
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL_SESSIONS")
}

model session {
  id                 Int       @id @default(autoincrement())
  userId             String
  title              String
  description        String
  date               DateTime
  time               DateTime
  totalOperations    Int       @default(0)
  profitLoss         Float     @default(0.0)
  averageGain        Float     @default(0.0)
  maxDrawdown        Float     @default(0.0)
  winRate            Float     @default(0.0)
  createdAt          DateTime  @default(now())
  startDate          DateTime?
  endDate            DateTime?
  currentCandleIndex Int       @default(0)
  accountSize        Float     @default(0)
  currentBalance     Float     @default(0)
  currency           String
  interval           String

  operations operation[]
}

model operation {
  id         Int      @id @default(autoincrement())
  sessionId  Int
  type       String // buy or sell
  orderType  String // market or limit
  size       Float
  entryPrice Float
  exitPrice  Float?
  profit     Float?
  tp         Float?
  sl         Float?
  createdAt  DateTime @default(now())

  session session @relation(fields: [sessionId], references: [id])
}
